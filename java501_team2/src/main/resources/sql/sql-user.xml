<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bitc.java501_team2.mapper.UserMapper">

    <select id="isUserInfo" parameterType="map" resultType="int">
        SELECT
            COUNT(*) AS cnt
        FROM
            user
        WHERE
            user_id = #{userId}
        AND
            user_pass = #{userPass}
        AND
            user_deleted_yn = 'N'
    </select>

    <select id="getUserInfo" parameterType="String" resultType="com.bitc.java501_team2.dto.UserDTO">
        SELECT
            user_id, user_name, user_regidate
        FROM
            user
        WHERE
            user_id = #{userId}
        AND
            user_deleted_yn = 'N'
    </select>



</mapper>